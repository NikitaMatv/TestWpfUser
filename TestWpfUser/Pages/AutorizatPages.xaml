<Page x:Class="TestWpfUser.Pages.AutorizatPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWpfUser.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizatPages">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontWeight="ExtraBold" FontSize="12"  >Логин</TextBlock>
            <TextBox Opacity="0.6" TextAlignment="Center"  Background="#E9E9E9" FontSize="25" x:Name="LoginTb" Width="250" Height="40" ></TextBox>
            <TextBlock FontWeight="ExtraBold" FontSize="12"  Margin="0 20 0 0">Пароль</TextBlock>
            <PasswordBox  Opacity="0.6"  Background="#E9E9E9" x:Name="PasswordTb" FontSize="25" Width="250" Height="40"></PasswordBox>
            <Button Margin="0 20 0 0" FontWeight="ExtraBold" Foreground="Black" FontSize="12" x:Name="AutorBt" Background="#E9E9E9" Click="AutorBt_Click" Height="40" Width="180">Авторизоваться</Button>
          
        </StackPanel>
    </Grid>
</Page>
